{
  "files.insertFinalNewline": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Monokai Dark Soda",
  "workbench.iconTheme": "material-icon-theme",
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "Myrica M",
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "[ruby]": {
    "editor.defaultFormatter": "castwide.solargraph"
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  "[go]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "terminal.integrated.fontSize": 14,
  "git.openRepositoryInParentFolders": "always",
  "scrolloff.scrolloff": 5,
  "indentRainbow.colors": [
    "rgba(236,236,236,0)",
    "rgba(236,236,236,0.03)"
  ],
  "whitespacepp.renderLF": false,
  "whitespacepp.renderEOF": false,
  "whitespacepp.foreColorTAB": "#646464",
  "whitespacepp.foreColorWS": "#d3201f",
  "whitespacepp.textTAB": ".",
  "trailing-spaces.backgroundColor": "rgba(211,32,31)",
  "trailing-spaces.borderColor": "rgba(255,238,153)",
  "trailing-spaces.syntaxIgnore": [
    "markdown"
  ],
  "trailing-spaces.highlightCurrentLine": false,
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "ruby.locate": {
    "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
    "include": "**/*.rb"
  },
  "ruby.useLanguageServer": true,
  "solargraph.formatting": true,
  "solargraph.autoformat": true,
  "solargraph.diagnostics": true
}
